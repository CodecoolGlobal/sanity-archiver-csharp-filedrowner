<Window x:Class="SanityArchiver.DesktopUI.Views.RenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SanityArchiver.DesktopUI.Views"
        mc:Ignorable="d"
        Title="RenameWindow" Height="200" Width="400">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="38,10,0,0" TextWrapping="Wrap" Text="Give it a new Name below:" FontSize="20" VerticalAlignment="Top" Height="49" Width="238"/>
        <TextBox x:Name="input" HorizontalAlignment="Left" Height="38" Margin="38,83,0,0" TextWrapping="Wrap" Text="{Binding SelectedItem.Title,Mode=OneWay}" VerticalAlignment="Top" Width="230"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="295,83,0,0" VerticalAlignment="Top" Width="75" Height="38" Click="Button_Click"/>

    </Grid>
</Window>
